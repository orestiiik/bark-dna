<div
        class="HeroVideoTextButtons"
>
    <div
            class="hero-text"
    >
        {% if section.settings.subtitle != blank %}
            <p class="Heading u-h5 text--subdued">{{ section.settings.subtitle }}</p>
        {% endif %}
        {% if section.settings.titleUpper != blank %}
            <h2 class="SectionHeader__Heading Heading u-h1">
                {{ section.settings.titleUpper }}
            </h2>
        {% endif %}
        {% if section.settings.titleLower != blank %}
            <h2 class="SectionHeader__Heading Heading u-h1">
                {{ section.settings.titleLower }}
            </h2>
        {% endif %}
        {%- if section.settings.button_1_text != blank -%}
            <a
                    href="{{ section.settings.button_1_link }}"
                    class="ButtonGroup__Item Button"
            >{{ section.settings.button_1_text | escape }}
                <span class="Button__Arrow">{%- render 'icon' with 'arrow_button' -%}</span>
            </a>
        {%- endif -%}

        {%- if section.settings.button_2_text != blank -%}
            <a
                    href="{{ section.settings.button_2_link }}"
                    class="ButtonGroup__Item Button"
            >{{ section.settings.button_2_text | escape }}
                <span class="Button__Arrow">{%- render 'icon' with 'arrow_button' -%}</span>
            </a>
        {%- endif -%}
    </div>
    <div class="overlay"></div>
    <video
            autoplay
            muted
            loop
    >
        <source
                src="https://cdn.shopify.com/videos/c/o/v/4ddb212e12a849d68ff9d6c9bbc4ddd2.mp4"
                type="video/mp4"
        >
        Your browser does not support the video tag.
    </video>
</div>
{% schema %}
{
"name": "Hero video",
"settings": [
{
"type": "text",
"id": "subtitle",
"label": "Subtitle"
},
{
"type": "text",
"id": "titleUpper",
"label": "Upper Title",
"default": "Large image with text"
},
{
"type": "text",
"id": "titleLower",
"label": "Lower Title",
"default": "Large image with text"
},
{
"type": "text",
"id": "button_1_text",
"label": "Button 1 Title",
"default": "Button 1"
},
{
"type": "text",
"id": "button_1_link",
"label": "Button 1 link",
"default": "#"
},
{
"type": "text",
"id": "button_2_text",
"label": "Button 2 Title",
"default": "Button 2"
},
{
"type": "text",
"id": "button_2_link",
"label": "Button 2 Link",
"default": "#"
}
],
"presets": [
{
"name": "Hero video",
"category": "ADVANCED LAYOUT"
}
]
}
{% endschema %}

{% stylesheet %}
.HeroVideoTextButtons {
position: relative;
height: 100vh;
}
.HeroVideoTextButtons .ButtonGroup__Item {
border-style: solid;
border-width: 1px;
border-color: white;
}
.HeroVideoTextButtons .hero-text {
position: absolute;
z-index: 3;
top: 23%;
left: 5%;
transform: translate(0%, -23%);
color: white !important;
}
.HeroVideoTextButtons .hero-text .Heading {
color: white !important;
}
.HeroVideoTextButtons video {
object-fit: cover;
width: 100vw;
height: 100%;
}
.HeroVideoTextButtons .hero-text .SectionHeader__Heading {
margin-top: 0;
margin-bottom: 0px;
}
.HeroVideoTextButtons .hero-text .text--subdued {
padding-bottom: 15px;
margin-bottom: 0px;
}
.HeroVideoTextButtons .overlay {
position: absolute;
z-index: 2;
background: black;
opacity: 0.6;
width: 100vw;
height: 100%;
}
{% endstylesheet %}

